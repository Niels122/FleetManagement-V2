<Page x:Class="WPF_GUI.MainPages.VoertuigPagina"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_GUI.MainPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VoertuigPagina">

    <Border BorderBrush="Black" BorderThickness="1" Margin="5">
        <Grid Background="White">
            <DockPanel Margin="10">
                <DockPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="5" />
                        <Setter Property="Padding" Value="2" />
                    </Style>
                </DockPanel.Resources>
                <Label DockPanel.Dock="Top" Content="Overzicht Voertuigen:" FontWeight="Bold"/>
                <DockPanel>
                    <ListView x:Name="lvOverzichtVoertuigen" DockPanel.Dock="Bottom" Margin="0,0,10,0" SelectionChanged="lvOverzichtVoertuigen_SelectionChanged"
                      SelectionMode="Single">
                        <ListView.View>
                            <GridView>
                                <!--De namen van de binding moeten exact hetzelfde zijn als de naam van de property-->
                                <GridViewColumn Header="Voertuignummer" Width="100" DisplayMemberBinding="{Binding Kaartnummer}" />
                                <GridViewColumn Header="Geldigheidsdatum" Width="100" DisplayMemberBinding="{Binding Geldigheidsdatum}" />
                                <GridViewColumn Header="Brandstof" Width="100" DisplayMemberBinding="{Binding Brandstof}" />
                                <GridViewColumn Header="Geblokkeerd" Width="100" DisplayMemberBinding="{Binding Geblokkeerd}" />
                                <GridViewColumn Header="Voertuig" Width="100" DisplayMemberBinding="{Binding BestuurderId}" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                </DockPanel>
                <StackPanel DockPanel.Dock="Right">
                    <Button x:Name="btnVoegVoertuigToe" Content="Voeg toe" Click="btnVoegVoertuigToe_Click"/>
                    <Button x:Name="btnVerwijderVoertuig" Content="Verwijder" Click="btnVerwijderVoertuig_Click" />
                    <Button x:Name="btnToonAlleInfo" Content="Toon info" Click="btnToonAlleInfo_Click" />
                    <Button x:Name="btnWijzigVoertuig" Content="Wijzig" Click="btnWijzigVoertuig_Click" />
                </StackPanel>
            </DockPanel>
        </Grid>
    </Border>
</Page>
