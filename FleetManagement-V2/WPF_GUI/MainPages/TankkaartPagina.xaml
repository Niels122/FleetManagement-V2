<Page x:Class="WPF_GUI.MainPages.TankkaartPagina"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_GUI.MainPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TankkaartPagina">

    <Border BorderBrush="Black" BorderThickness="1" Margin="5">
        <Grid Background="White">
            <DockPanel Margin="10">
                <DockPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="5" />
                        <Setter Property="Padding" Value="2" />
                    </Style>
                </DockPanel.Resources>
                <DockPanel>
                    <Label DockPanel.Dock="Top"  Content="Overzicht tankkaarten:" FontWeight="Bold"/>
                    <ListView x:Name="lvOverzichtTankkaarten" DockPanel.Dock="Bottom" Margin="0,0,10,0" SelectionChanged="lvOverzichtTankkaarten_SelectionChanged"
                      SelectionMode="Single">
                        <ListView.View>
                            <GridView>
                                <!--De namen van de binding moeten exact hetzelfde zijn als de naam van de property-->
                                <GridViewColumn Header="VoertuigId" Width="100" DisplayMemberBinding="{Binding VoertuigId}" />
                                <GridViewColumn Header="Nummerplaat" Width="100" DisplayMemberBinding="{Binding Nummerplaat}" />
                                <GridViewColumn Header="Chassisnummer" Width="100" DisplayMemberBinding="{Binding Chassisnummer}" />
                                <GridViewColumn Header="Brandstoftype" Width="100" DisplayMemberBinding="{Binding Brandstoftype}" />
                                <GridViewColumn Header="Bestuurder" Width="100" DisplayMemberBinding="{Binding BestuurderId}" />
                            </GridView>
                        </ListView.View>
                    </ListView>

                </DockPanel>
                <StackPanel DockPanel.Dock="Right">
                    <Button x:Name="btnVoegTankkaartToe" Content="Voeg toe" Click="btnVoegTankkaartToe_Click"/>
                    <Button x:Name="btnVerwijderTankkaart" Content="Verwijder" Click="btnVerwijderTankkaart_Click" />
                    <Button x:Name="btnToonAlleInfo" Content="Toon info" />
                    <Button x:Name="btnWijzigTankkaart" Content="Wijzig" />
                </StackPanel>
            </DockPanel>
        </Grid>
    </Border>
</Page>
