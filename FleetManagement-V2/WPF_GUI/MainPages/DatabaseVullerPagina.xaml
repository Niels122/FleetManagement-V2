<Page x:Class="WPF_GUI.MainPages.DatabaseVullerPagina"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_GUI.MainPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="DatabaseVullerPagina">

    <Grid HorizontalAlignment="Center">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="200" Width="600">
            <Label Content="Databank vullen" FontSize="20" HorizontalAlignment="Center" Padding="10"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Hoeveel records wilt u toevoegen aan de databank?" FontSize="14" Padding="10" Margin="10"/>
                <TextBox x:Name="tbAantalRecords" Width="100" Padding="10" Margin="10"/>
                <Button x:Name="btnToevoegen" Content="Toevoegen" Width="100" Padding="10" Margin="10" Click="btnToevoegen_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
